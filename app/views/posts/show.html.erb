<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Author:</strong>
  <%= @post.author %>
</p>

<p>
  <strong>Blog entry:</strong>
  <%= @post.blog_entry %>
</p>

<p><%= link_to 'Edit', edit_post_path(@post) %></p>

<div id="comments">
	<%= render 'comments/form', comment: @comment %>

	<% @post.comments.each do |comment|  %>
		<h3><%= comment.author %> said ...</h3>
		<p><%= comment.comment_entry %></p>
		<p><%= link_to "Edit Comment", edit_comment_path(id: comment.id, post_id:  @post.id), class: "btn btn-info" %> | 
		<%= link_to 'Destroy', comment, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></p>
	<% end %>	

</div>


<p><%= link_to 'Back', posts_path %></p>










